{
    "manifest_version": 2,
    "name": "Comment Retriever",
    "description": "Utility for creating notifications for comments.",
    "version": "0.0.1",
    "icons": {
        "48": "icons/ico48.png"
    },
    "permissions": ["tabs"],
    "content_scripts": [
        {
            "matches": [
                "https://francisparker.myschoolapp.com/*",
                "http://francisparker.myschoolapp.com/*"
            ],
            "js": ["js/check-for-changes.js"]
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    }
}
