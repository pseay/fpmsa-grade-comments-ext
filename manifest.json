{
    "manifest_version": 2,
    "name": "Assignment Organizer",
    "description": "Utility for creating a better daily assignment view.",
    "version": "1.0",
    "icons": {
        "48": "icons/ico48.png"
    },
    "permissions": ["tabs"],
    "content_scripts": [
        {
            "matches": ["https://francisparker.myschoolapp.com/*", "http://francisparker.myschoolapp.com/*"],
            "js": ["js/get-assignments.js", "js/show-schedule.js"]
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    }
}
